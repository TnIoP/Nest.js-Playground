generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id      Int       @id @unique
  email   String    @unique
  name    String?
  posts   Post[]
}

model Post {
  id        Int       @id @unique
  title     String
  content   String?
  published Boolean?  @default(false)
  authorId  Int
  author    User      @relation(fields: [authorId], references: [id], onDelete: Cascade)
}

